---
type Props = {
    href?: string;
    rel?: string;
    target?: string;
}

const { href, rel, target } = Astro.props;

---

<!-- TODO: Change color from text-secondary-500 to text-secondary or something -->

<a
    class="text-secondary-500 hover:text-primary hover:underline transition-colors"
    target={target}
    rel={rel}
    href={href}
>
  <slot />
</a>
