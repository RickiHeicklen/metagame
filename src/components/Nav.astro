---
import AnimatedDie from "./Die/AnimatedDie";
import NavItem from "./NavItem.astro";
import Tag from "./Tag.tsx";

---

<div class="fixed w-full z-10 shadow-[0px_4px_8px_0px_#8b1d6d]">
  <nav class="">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
    <div class="flex items-center space-x-2 rtl:space-x-reverse">
      <AnimatedDie client:load/>
        <a href="/" >
          <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">ME<Tag text="TAG" speed={0.005} catchDistance={50} client:load />AME 2025</span>
        </a>
    </div>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg lg:hidden focus:outline-none focus:ring-2 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
      <div class="hidden w-full lg:block lg:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-2 lg:p-0 mt-4 lg:flex-row lg:gap-x-5 rtl:space-x-reverse lg:mt-0"
        >
        <select data-choose-theme>
          <option value="">Default</option>
          <option value="dark">Dark</option>
          <option value="pink">Pink</option>
          <option value="mytheme">My Theme</option>
          <option value="synthwave">Synthwave</option>
          <option value="retro">Retro</option>
          <option value="cyberpunk">Cyberpunk</option>
          <option value="forest">Forest</option>
          <option value="cupcake">Cupcake</option>
          <option value="acid">Acid</option>
          <option value="aqua">Aqua</option>
          <option value="black">Black</option>
        </select>
          <!-- <NavItem href="/about">About</NavItem> -->
          <NavItem href="/#speakers">Speakers</NavItem>
          <NavItem href="/#tickets">Tickets</NavItem>
          <!-- <NavItem href="/agenda">Agenda</NavItem> -->
