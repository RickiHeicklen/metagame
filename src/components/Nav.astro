---
import AnimatedCustomDie from "./Die/AnimatedCustomDie";
import NavItem from "./NavItem.astro";
import Tag from "./Tag.tsx";
import CoinCounter from "./CoinCounter.tsx";

const STARTING_DIE_IDENTIFIER = {
  left: 2,
  top: 5,
  right: 3,
};

---

<div class="fixed w-full z-10 shadow-[0px_4px_8px_0px_#8b1d6d]">
  <nav class="bg-dark-500">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
    <div class="flex items-center space-x-2 rtl:space-x-reverse">
      <AnimatedCustomDie startingDieIdentifier={STARTING_DIE_IDENTIFIER} client:load/>
        <a href="/" >
          <span class="nav-logo self-center text-2xl font-semibold whitespace-nowrap text-white">ME<Tag text="TAG" speed={0.005} catchDistance={50} client:load />AME 2025</span>
        </a>
    </div>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg lg:hidden focus:outline-none focus:ring-2 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
      <div class="hidden w-full lg:block lg:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col items-end p-2 lg:p-0 mt-4 lg:flex-row lg:gap-x-5 rtl:space-x-reverse lg:mt-0"
        >
        <CoinCounter client:load />

          <!-- <NavItem href="/about">About</NavItem> -->
          <NavItem href="/#speakers">Speakers</NavItem>
          <NavItem href="/#tickets">Tickets</NavItem>
          <NavItem href="/contribute">Get Involved</NavItem>
          <!-- <NavItem href="/agenda">Agenda</NavItem> -->
          <!-- <NavItem href="/sessions">Sessions</NavItem> -->
          <!-- <div class="block lg:hidden">
            <NavItem href="/#cfs">Call for Speakers</NavItem>
          </div> -->
          <NavItem href="/#sponsors">Sponsors</NavItem>
          <NavItem href="/faq">FAQ</NavItem>
        </ul>
      </div>
    </div>
  </nav>
</div>

<style>
  .nav-logo {
    /* Default state (dark mode) */
    color: white;
    text-shadow: none;
    position: relative;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  /* Dark mode hover effect */
  .nav-logo:hover {
    text-shadow: 
      0 0 5px #ff57ff,
      0 0 15px #aa33ff;
  }

  /* Light mode styles */
  :global(.light) .nav-logo {
    color: #ff57ff;
    text-shadow: 0 0 2px rgba(255, 87, 255, 0.3);
  }

  /* Light mode hover effect */
  :global(.light) .nav-logo:hover {
    text-shadow: 
      0 0 5px rgba(255, 87, 255, 0.7),
      0 0 10px rgba(170, 51, 255, 0.5);
  }
</style>
