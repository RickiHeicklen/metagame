---
import Layout from "../layouts/Layout.astro";
import TicketCard from "../components/TicketCard.astro";
import Hero from "../components/sections/home/Hero.astro";
import Organizers from "../components/sections/home/Organizers.astro";
import Speakers from "../components/sections/home/Speakers.astro";
import Location from "../components/sections/home/Location.astro";
import CallForSpeakers from "../components/sections/home/CallForSpeakers.astro";
import SubscribePopup from "../components/SubscribePopup.astro";
import MyCrossword from "../components/MyCrossword.jsx";
---

<Layout title="Home">
  <main class="dark:text-white px-4">
    <Hero />
    <Speakers />
    <Location />
    <section class="mb-8 bg-dark-500 mt-40" id="tickets">
      <div class="container mx-auto">
        <h2 class="mb-8 text-3xl font-bold text-center">
          Sounds fun? Grab a ticket!
        </h2> 


        <div class="grid grid-cols-1 gap-8 md:grid-cols-3 pb-20">
          <TicketCard
            title="Volunteer"
            price={`$101`}
            regularPrice="$404"
            description="Subject to availability"
            features={[
              "Premium swag",
              "OK food",
              "Participation in a volunteer cult initiation ritual"
            ]}
          />
          <TicketCard
            title="Early Bird"
            price={`$404`}
            regularPrice="$666"
            description="Available through June 1st"
            features={[
              "Premium swag",
              "OK food",
              "Don't have to spend your conference staffing the volunteer desk"
            ]}
          />
          <TicketCard
            title="Supporter"
            price="$2048"
            description="We will name a game after you"
            features={[
              "Premium swag",
              "Slightly better than OK food",
              "The knowledge that you're supporting other people's fun"
            ]}
            buttonText="Contact Us"
            href="mailto:ricki.heicklen@gmail.com"
          />
        </div>
      </div>
    </section>
    <Organizers />
    <CallForSpeakers />
    <SubscribePopup />
  </main>
</Layout>
